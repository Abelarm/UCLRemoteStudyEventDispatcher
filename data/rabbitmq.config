[
  {rabbit, [
     {ssl_listeners, [5671]},
     {ssl_options, [{cacertfile,"/path/to/your/server/cacert.pem"},
                    {certfile,"/path/to/your/server/cert.pem"},
                    {keyfile,"/path/to/your/server/key.pem"},
                    {verify,verify_peer},
                    {fail_if_no_peer_cert,false}, 
                    {versions, ['tlsv1.2', 'tlsv1.1', 'tlsv1']}
                    ]
     }
   ]}
].